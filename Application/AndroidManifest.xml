<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="de.metafinanz.mixnmatch.frontend.android" android:versionCode="1"
	android:versionName="1.0">

	<uses-sdk android:minSdkVersion="7" />
	<uses-library android:name="com.google.android.maps" />
	<uses-permission android:name="android.permission.INTERNET" />



	<application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@android:style/Theme.Light">
		<activity android:name="MixAndMatch" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="de.metafinanz.mixnmatch.frontend.android.RequestMatch" />
		<activity android:name="de.metafinanz.mixnmatch.frontend.android.ReceiveMatch" />
		<activity android:name="de.metafinanz.mixnmatch.frontend.android.LocationDialog" android:theme="@android:style/Theme.NoTitleBar" />
		<service android:enabled="true" android:name=".services.LocationsService" />
		<provider android:authorities="de.metafinanz.mixnmatch.frontend.android.contprov" android:name=".providers.ContProv"/>
		
		<uses-library android:name="com.google.android.maps" />
	</application>
</manifest>